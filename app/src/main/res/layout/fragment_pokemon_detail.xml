<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PokemonDetail"
    android:background="@color/colorPrimaryDark"
    >

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <android.support.v7.widget.CardView

            android:id="@+id/cardview_detail"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white"
            >


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txtV_name_detail"
                    android:text="Pikachu"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="80dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txtV_height_detail"
                    android:text="Height"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txtV_weight_detail"
                    android:text="weight"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/txtV_type_detail"
                    android:text="Type"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                 </TextView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_type"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </android.support.v7.widget.RecyclerView>



                <TextView
                    android:id="@+id/txtV_weakness"
                    android:text="Weakness"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                </TextView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_weakness"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </android.support.v7.widget.RecyclerView>


                <TextView
                    android:id="@+id/txtV_PEvolution"
                    android:text=" Prev. evolution"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                </TextView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_PEvolution"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/txtV_NEvolution"
                    android:text=" Next evolution"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                </TextView>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_NEvolution"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </android.support.v7.widget.RecyclerView>


            </LinearLayout>





        </android.support.v7.widget.CardView>


        <ImageView

            android:layout_alignTop="@+id/cardview_detail"
            android:id="@+id/pokemon_image_detail"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />


    </RelativeLayout>


</RelativeLayout>